package com.nhutdb.drawingconsole.models;

public class Canvas {
	private int w;
	private int h;
	private char[][] matrix;
	public Canvas(int w, int h) {
		this.matrix= new char[w+2][h+2];
	}
	public void setPoint(x, y, value) {
		this.matrix[x][y] = value;
	}
	/**
	 * @return the w
	 */
	public int getW() {
		return w;
	}
	/**
	 * @param w the w to set
	 */
	public void setW(int w) {
		this.w = w;
	}
	/**
	 * @return the h
	 */
	public int getH() {
		return h;
	}
	/**
	 * @param h the h to set
	 */
	public void setH(int h) {
		this.h = h;
	}
	
}
